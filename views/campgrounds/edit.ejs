<% include ../partials/main/mainHeader.ejs %>

<div class="container" >
    <div class="row">
        <div class="col-md-5 col-10" id="campgroundForm">
                <h1 style="text-align: center;">Edit <em><%=campground.name%></em></h1>
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control"  name = "price" value="<%=campground.price%>" min="0.00" step="0.05">
                </div>
                <!-- <div class="form-group">
                    <input type="text" class="form-control" name ="campground[image]" value="<%=campground.image%>">
                </div> -->
                <div class="form-group">
                    <label for="image">image</label>
                    <input type="file" class="form-control" id="image" name = "image" accept="image/*">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="5" id="exampleFormControlTextarea1" class="form-control"><%=campground.description%></textarea>
                </div>
                <div class="form-group"> 
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Edit!</button>
                </div>
                <a class="btn btn-primary btn-sm" href="/campgrounds">Back to campgrounds</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/main/mainFooter.ejs %>