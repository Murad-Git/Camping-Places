<% include ../partials/main/mainHeader.ejs %>

<div class="container" >
    <div class="row">
        <div class="col-md-5 col-10" id="campgroundForm">
                <h1 style="text-align: center;">Edit your profile</h1>
            <form action="/users/<%=user._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <input class="form-control" type="text" name="user[firstName]" value="<%=user.firstName%>">
                        </div>
                        <div class="col">
                            <input class="form-control" type="text" name="user[lastName]" value="<%=user.lastName%>">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[avatar]" value="<%=user.avatar%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[desc]" value="<%=user.desc%>">
                </div>
                <div class="form-group"> 
                    <button type="submit" class="btn btn-md btn-primary btn-block">Edit!</button>
                </div>
                <a class="btn btn-primary btn-sm" href="/users/<%=user._id%>">Back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/main/mainFooter.ejs %>